<p id="notice"><%= notice %></p>

<h1>大手町のおいしい</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @eatings.each do |eating| %>
      <tr>
        <td><%= eating.name %></td>
        <td><%= eating.description %></td>

        <% if eating.picture.present? %>
          <td><%= link_to image_tag(eating.picture_url, width: 50), eating %></td>
        <% else %>
          <td><%= link_to image_tag('noimage.png', width: 50), eating %></td>
        <% end %>

        <td><%= link_to 'Edit', edit_eating_path(eating) %></td>
        <td><%= link_to 'Destroy', eating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

